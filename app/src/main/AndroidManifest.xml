<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.movielist">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_film"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_film"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Activities.MovieListActivity"
            android:label="@string/popular" />
        <activity
            android:name=".Activities.MovieDetailsActivity"
            android:label="" />
        <activity android:name=".BaseClass.BaseActivity"></activity>
    </application>

</manifest>